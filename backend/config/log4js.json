{
      "appenders": [
        {
          "type": "dateFile",
          "filename": "log/access.log",
          "pattern": "-yyyy-MM-dd",
          "category": "http"
        },
        {
          "type": "file",
          "filename": "log/app.log",
          "maxLogSize": 10485760,
          "numBackups": 3,
          "encoding": "utf8"
        },
        {
          "type": "logLevelFilter",
          "category": "production",
          "level": "ERROR",
          "appender": {
            "type": "file",
            "filename": "log/errors.log"
          }
        },
        {
            "type": "console",
            "category": "development",
            "level": "DEBUG"
        }
      ],
      "replaceConsole": "false"
}
