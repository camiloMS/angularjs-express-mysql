{
  "appenders": [
    {
      "type": "clustered",
      "appenders": [
        {
          "type": "dateFile",
          "filename": "log/access.log",
          "pattern": "-yyyy-MM-dd",
          "category": "http"
        },
        {
          "type": "file",
          "filename": "log/app.log",
          "maxLogSize": 10485760,
          "numBackups": 3
        },
        {
          "type": "logLevelFilter",
          "category": "ERROR",
          "appender": {
            "type": "file",
            "filename": "log/errors.log"
          }
        },
        {
            "type": "console",
            "category": "ERROR"
        }
      ]
    }
  ]
}
